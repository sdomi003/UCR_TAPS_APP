<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HomeScreen">


    <Button
        android:id="@+id/UpdatePersonalOption"
        android:layout_width="359dp"
        android:layout_height="65dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="@string/info_update"
        app:layout_constraintBottom_toTopOf="@+id/UpdateScheduleOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_classes" />

    <Button
        android:id="@+id/UpdateScheduleOption"
        android:layout_width="359dp"
        android:layout_height="65dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Update Schedule Information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdatePersonalOption" />

    <TextView
        android:id="@+id/Greeting"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="90dp"
        android:autoLink="web"
        android:text="@string/hello_message"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/launch_google_maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <Button
        android:id="@+id/launch_google_maps"
        android:layout_width="355dp"
        android:layout_height="62dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:text="Take Me To My Next Class"
        app:layout_constraintBottom_toTopOf="@+id/weblink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Greeting" />

    <ListView
        android:id="@+id/today_classes"
        android:layout_width="387dp"
        android:layout_height="158dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/UpdatePersonalOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="148dp"
        android:text="Today's Classes"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/today_classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weblink" />

    <Button
        android:id="@+id/weblink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:onClick="open"
        android:text="Purchase a pass"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launch_google_maps" />

    <Button
        android:id="@+id/log"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:text="Log Out"
        app:layout_constraintBottom_toTopOf="@+id/Greeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LyftButton"
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="28dp"
        android:text="Lyft"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/weblink"
        app:layout_constraintTop_toBottomOf="@+id/launch_google_maps" />

</android.support.constraint.ConstraintLayout>